#!/usr/bin/env bash

set -e

CONFIG="install.conf.yaml"
DOTBOT_DIR="dotbot"

DOTBOT_BIN="bin/dotbot"
BASEDIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

cd "${BASEDIR}"
git -C "${DOTBOT_DIR}" submodule sync --quiet --recursive
git submodule update --init --recursive "${DOTBOT_DIR}"

"${BASEDIR}/${DOTBOT_DIR}/${DOTBOT_BIN}" -d "${BASEDIR}" -c "${CONFIG}" "${@}"

# Brewfile as single source of truth (like Terraform)
# Install packages in Brewfile and remove those not listed
echo "Syncing Homebrew packages with Brewfile..."
brew bundle --file="${BASEDIR}/Brewfile"
brew bundle cleanup --force --file="${BASEDIR}/Brewfile"

# Install Composer via php@8.4 (not brew, to avoid pulling in unversioned php)
if ! command -v composer &>/dev/null; then
  echo "Installing Composer via php@8.4..."
  php -r "copy('https://getcomposer.org/installer', 'composer-setup.php');"
  php composer-setup.php
  php -r "unlink('composer-setup.php');"
  mv composer.phar /opt/homebrew/bin/composer
  chmod +x /opt/homebrew/bin/composer
fi
