#!/usr/bin/env bash

#Remove last login information from terminal when opened
rm ~/.hushlogin
touch ~/.hushlogin

#Symlink configuration files
rm ~/.aliases
ln -s ~/.dotfiles/aliases ~/.aliases

#"vim/nvim/ideavim bindings/settings
rm ~/.config/nvim ~/.vimrc ~/.ideavimrc
ln -s ~/.dotfiles/nvim ~/.config/nvim
ln -s ~/.dotfiles/vimrc ~/.vimrc
ln -s ~/.dotfiles/ideavimrc ~/.ideavimrc

#git configs
rm ~/.gitconfig ~/.global_gitignore
ln -s ~/.dotfiles/gitconfig ~/.gitconfig
ln -s ~/.dotfiles/global_gitignore ~/.global_gitignore

#vscode settings and bindings
rm ~/Library/Application\ Support/Code/User/keybindings.json
rm ~/Library/Application\ Support/Code/User/settings.json
ln -s ~/.dotfiles/vscode/keybindings.json ~/Library/Application\ Support/Code/User/keybindings.json
ln -s ~/.dotfiles/vscode/settings.json ~/Library/Application\ Support/Code/User/settings.json

#hammerspoon config
rm ~/.hammerspoon
ln -s ~/.dotfiles/hammerspoon ~/.hammerspoon

#tmux config
rm ~/.tmux.conf
ln -s ~/.dotfiles/tmux.conf ~/.tmux.conf

#zshrc config
rm ~/.zshrc
ln -s ~/.dotfiles/zshrc ~/.zshrc
